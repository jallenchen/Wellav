<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="font1">
	    <item name="android:textSize">24px</item>
	</style>
	<style name="font2">
	    <item name="android:textSize">28px</item>
	</style>
	<style name="font3">
	    <item name="android:textSize">36px</item>
	</style>
	<style name="font4">
	    <item name="android:textSize">44px</item>
	</style>
	<style name="font5">
	    <item name="android:textSize">16px</item>
	</style>
	
	<style name="h1" parent="font5">
	    <item name="android:textColor">@color/color2</item>
	</style>
	<style name="h2" parent="font2">
	    <item name="android:textColor">@color/color2</item>
	</style>
	<style name="h3" parent="font2">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="h4" parent="font3">
	    <item name="android:textColor">@color/color2</item>
	</style>
	<style name="h5" parent="font4">
	    <item name="android:textColor">@color/color2</item>
	</style>
	<style name="h6" parent="font1">
	    <item name="android:textColor">@color/color2</item>
	</style>
	<style name="h7" parent="font1">
	    <item name="android:textColor">@color/color4</item>
	</style>
	<style name="h8" parent="font1">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="h9" parent="font4">
	    <item name="android:textColor">@color/color4</item>
	</style>
	<style name="h10" parent="font3">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="h11" parent="font5">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="h12" parent="font4">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="h13" parent="font1">
	    <item name="android:textColor">@color/blue</item>
	</style>
	    <!-- line 式样 -->
    <style name="Line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color2</item>
    </style>

    <style name="Line2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/white</item>
    </style>
       <style name="Line3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/white_50</item>
    </style>
    
       
       
       <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/color_activity_blue_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>
    
           <style name="dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
        <style name="dialog_message_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>
        <style name="dialog_button_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/nim_list_item_selector</item>
        <item name="android:paddingTop">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_padding_vertical</item>
    </style>
    
         <!-- dialog style -->
    <style name="easy_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 后面的activity变暗 -->
    </style>
</resources>
