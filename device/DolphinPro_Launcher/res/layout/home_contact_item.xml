<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
   
   <com.wellav.dolphin.ui.CircleImageView 
       android:id="@+id/item_home"
       android:layout_width="200.0px"
       android:layout_height="200.0px"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20.0px"
       android:layout_marginTop="20.0px"
       tools:ignore="ContentDescription" />
   
   <ImageView 
       android:id="@+id/item_type"
       android:layout_width="28.0px"
       android:layout_height="28.0px"
       android:layout_marginTop="14px"
       android:layout_toLeftOf="@+id/item_name"
       android:layout_marginRight="8.0px"
       android:src="@drawable/type_phone_blue"
       android:layout_below="@+id/item_home"/>
   
    <TextView
       android:id="@+id/item_name"
       style="@style/h2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:layout_marginTop="8px"
       android:singleLine="true"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/item_home"/>
       <!-- wwyue  add 显示是否在线 -->
</RelativeLayout>