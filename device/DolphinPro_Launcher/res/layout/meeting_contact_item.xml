<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80px"
    android:padding="16px"
    android:orientation="horizontal" >

    <com.wellav.dolphin.ui.CircleImageView
        android:id="@+id/meeting_contact_head_iv"
        android:layout_width="64.0px"
        android:layout_height="64.0px"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/meeting_contact_type_iv"
        android:layout_width="28px"
        android:layout_height="28px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16px"
        android:layout_toRightOf="@+id/meeting_contact_head_iv"
        android:src="@drawable/type_dolphin_blue" />

    <TextView
        android:id="@+id/meeting_contact_name_tv"
        style="@style/h3"
        android:layout_width="150px"
        android:layout_height="wrap_content"
         android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/meeting_contact_type_iv"
        android:layout_marginLeft="8px" />

    <ImageView
        android:id="@+id/meeting_contact_micr_iv"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24px"
        android:src="@drawable/voice_btn_selector" />

</RelativeLayout>