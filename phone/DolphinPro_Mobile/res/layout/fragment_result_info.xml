<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:clickable="true"
    android:background="@color/color106" >

    <include
        android:id="@+id/info_title"
        android:clickable="false"
        layout="@layout/infomation_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_title"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/info_place"
                style="@style/H2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/info_place" />

            <TextView
                android:id="@+id/info_city"
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="惠州" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            style="@style/Line2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <RelativeLayout
            android:id="@+id/info_age_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/info_age"
                style="@style/H2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/info_age" />

            <TextView
                android:id="@+id/info_age_content"
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="19" />
        </RelativeLayout>
    </LinearLayout>
    
     <TextView
        android:id="@+id/link_info"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_above="@+id/join"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"/>
    
        <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/buttonblue_shap"
        android:text="@string/invite_join"
        style="@style/H1"/>

</RelativeLayout>