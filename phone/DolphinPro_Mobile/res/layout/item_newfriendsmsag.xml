<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff" >
 	 <ImageView
            android:id="@+id/iv_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_type_phone" />
       <com.wellav.dolphin.mmedia.ui.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_type"
            android:layout_marginLeft="8dp"
            android:src="@drawable/default_useravatar" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="黄方意"
           style="@style/H2" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="请求加你为好友"
           style="@style/H11" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已同意"
               style="@style/H11" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:background="@drawable/buttonblue_shap"
                android:text="同意"
                style="@style/H16" />
        </LinearLayout>
        
        <View 
            android:id="@+id/view"
            style="@style/Line2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>