<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_custom2" />
    
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     
       <TextView  
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/old_psw"
          android:layout_marginTop="28dp"
          android:layout_marginLeft="16dp"
          style="@style/H2"/>
       
    <EditText
        android:id="@+id/psw_settings_old"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="输入原来的登陆密码" 
        android:text="" />

    <View
        style="@style/Line3"
        android:layout_below="@+id/psw_settings_old"
        android:layout_marginTop="8dp" />
        
        </RelativeLayout>
        
   
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     
       <TextView  
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/newpsw"
          android:layout_marginTop="28dp"
          android:layout_marginLeft="16dp"
          style="@style/H2"/>
       
    <EditText
        android:id="@+id/psw_settings_new"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="输入新的登陆密码" 
        android:text="" />

    <View
        style="@style/Line3"
        android:layout_below="@+id/psw_settings_new"
        android:layout_marginTop="8dp" />
        
   </RelativeLayout>
   
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     
       <TextView  
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/confirm_psw"
          android:layout_marginTop="28dp"
          android:layout_marginLeft="16dp"
          style="@style/H2"/>
       
    <EditText
        android:id="@+id/psw_confirm"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="再次输入新的登陆密码" 
        android:text="" />

    <View
        style="@style/Line3"
        android:layout_below="@+id/psw_confirm"
        android:layout_marginTop="8dp" />
        
        </RelativeLayout>
        
   <Button
        android:id="@+id/psw_submit"
        style="@style/H1"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonblue_shap"
        android:text="@string/submit" />
   
   <Button
          android:id="@+id/psw_forget"  
          android:layout_width="136dp"
          android:layout_height="28dp"
          android:text="@string/psw_forget"
          android:layout_gravity="center"
          android:textColor="@color/color1"
          android:background="@null"
          android:layout_marginTop="23dp"
          style="@style/H2"/>
    

</LinearLayout>

