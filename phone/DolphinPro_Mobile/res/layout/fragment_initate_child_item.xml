<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white">

    <ToggleButton
        android:id="@+id/checkbox"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/checkbox_selector"
        android:textOff=""
        android:textOn="" />

    <com.wellav.dolphin.mmedia.ui.CircleImageView
        android:id="@+id/membericon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/checkbox"
        android:src="@drawable/ic_defaulthead_home_40dp" />

    <TextView
        android:id="@+id/membername"
        style="@style/H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/membericon"
        android:text="用户AA" />

    <ImageView
        android:id="@+id/membertype"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_type_dolphin" />
    <View
        android:id="@+id/view" 
        style="@style/Line2"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>