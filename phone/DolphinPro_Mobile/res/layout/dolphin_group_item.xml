<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/restsend_selector"
    android:gravity="center_vertical" >

    <com.wellav.dolphin.mmedia.ui.CircleImageView
        android:id="@+id/id_group_head"
        android:layout_width="48dip"
        android:layout_height="64dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:src="@drawable/ic_defaulthead_home_40dp" />

    <TextView
        android:id="@+id/id_group_name"
        style="@style/H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/id_group_head"
        android:text="我的家" />

    <ImageView
        android:id="@+id/id_group_manager"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/id_group_name"
        android:src="@drawable/admin_lable_18dp" />

    <TextView
        android:id="@+id/id_group_online"
        style="@style/H11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/id_group_arrow"
        android:text="查询中" />

    <ImageView
        android:id="@+id/id_group_arrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/arrow_r_gray" />

    <View
        android:id="@+id/view"
        style="@style/Line2"
        android:layout_alignParentBottom="true" />

</RelativeLayout>