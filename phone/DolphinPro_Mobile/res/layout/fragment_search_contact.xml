<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:clickable="true"
    android:background="@color/white">
    
    <include 
        android:id="@+id/actionbar"
        layout="@layout/actionbar_custom2"
        />
    <RelativeLayout 
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/actionbar"
        >
    <ImageView 
        android:id="@+id/search_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_search_grey"
        />
    <EditText 
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/H2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/search_icon"
        android:layout_centerVertical="true"
        android:hint="@string/number_type"
        android:textColorHint="@color/color105"
        android:singleLine="true"
        android:maxLength="11"
        android:inputType="phone"
        android:background="@null"
        />
    <View 
        style="@style/Line1"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
 <RelativeLayout 
        android:id="@+id/search_rl"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/search_layout"
        android:clickable="true"
        android:background="@drawable/text_press_selector"
        >
    <ImageView 
        android:id="@+id/search_bicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_search_blue"
        />
    <TextView 
        android:id="@+id/search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/search_bicon"
        android:layout_centerVertical="true"
        android:text="@string/search_"
        />
      <TextView 
          android:id="@+id/search_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H10"
        android:layout_toRightOf="@+id/search_tv"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
</RelativeLayout>
