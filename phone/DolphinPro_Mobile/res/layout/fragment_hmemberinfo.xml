<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color106">

    <include
        android:id="@+id/info_title"
        layout="@layout/infomation_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_title"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
        	android:background="@color/white" 
            android:clickable="false">

            <TextView
                android:id="@+id/info_place"
                style="@style/H2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:text="@string/info_place" />

            <TextView
                android:id="@+id/info_city"
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:paddingLeft="0dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            style="@style/Line2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
       		android:background="@color/white" 
            android:clickable="false">

            <TextView
                android:id="@+id/info_age"
                style="@style/H2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:text="@string/info_age" />

            <TextView
                android:id="@+id/info_age_content"
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
               android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:paddingLeft="0dp"
                android:text="19" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            style="@style/Line2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/moment_layout"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:clickable="true"
            android:visibility="gone"
            android:background="@drawable/restsend_selector" >

            <TextView
                style="@style/H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="@string/one_time" />
        </RelativeLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/del_btn"
        style="@style/H1"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/buttonred_shap"
        android:text="@string/delete" />
</RelativeLayout>