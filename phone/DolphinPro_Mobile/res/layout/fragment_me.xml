<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color106"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/me_username"
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/selector_listitem"
                android:gravity="left|center_vertical"
                android:paddingLeft="80dp"
                android:text="@string/myusername" />

            <com.wellav.dolphin.mmedia.ui.CircleImageView
                android:id="@+id/headicon"
                android:layout_width="48.0dp"
                android:layout_height="48.0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40.0dp" />

            <ImageView
                android:id="@+id/ic_type_phone"
                android:layout_width="32.0dp"
                android:layout_height="32.0dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/ic_type_phone" />
        </RelativeLayout>

        <Button
            android:id="@+id/personal_moment"
            style="@style/H2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_listitem"
            android:drawableLeft="@drawable/ic_mymoment"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/personalmoment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <Button
                android:id="@+id/accompany_time"
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_listitem"
                android:drawableLeft="@drawable/ic_statistics"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/accompanytime" />

            <View style="@style/Line2" />

            <Button
                android:id="@+id/second_psw"
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_listitem"
                android:drawableLeft="@drawable/ic_secondpassword"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/secondpsw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <Button
                android:id="@+id/setting"
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_listitem"
                android:drawableLeft="@drawable/ic_setting2"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/setting" />

            <View style="@style/Line2" />

            <RelativeLayout
                android:id="@+id/send_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/invitedownload"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/selector_listitem"
                    android:drawableLeft="@drawable/ic_invitedownload"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:text="@string/invitedownload" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:background="@color/color3"
                    android:text="@string/send_link"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>