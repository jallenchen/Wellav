<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" 
    android:background="@color/color103">
    
    <ImageView
        android:id="@+id/actionbar_prev"
        android:layout_width="48dp"
        android:layout_height="48dp" 
        android:padding="8dp"   
        android:src="@drawable/arrow_l_white"
        android:background="@drawable/actionbar_selector"/>
    
      <View 
        android:layout_height="match_parent" 
        android:layout_width="1px"
        android:layout_toRightOf="@+id/actionbar_prev"
        android:background="@color/color101" />
    
    <TextView
        android:id="@+id/actionbar_name"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/actionbar_prev" 
        android:layout_marginLeft="9dp"
        style="@style/H1"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/finish"
        style="@style/H1"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonblue_shap"
        android:text="@string/info_finish" 
        android:visibility="gone"/>
</RelativeLayout>
